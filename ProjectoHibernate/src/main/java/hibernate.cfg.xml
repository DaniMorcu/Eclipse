<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">altair</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/reproductorbd</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.show_sql">true</property>
		
		<mapping class="es.datos.Canciones"/>	
		<mapping class="es.datos.Generos"/>
		<mapping class="es.datos.Usuarios"/>
		<mapping class="es.datos.ListaRepro"/>
		<mapping class="es.datos.ListasRepro_has_Canciones"/>
		
	</session-factory>
</hibernate-configuration>

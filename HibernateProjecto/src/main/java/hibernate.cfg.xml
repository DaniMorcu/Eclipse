<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/reproductorbd</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.show_sql">true</property>
		
		<mapping class="es.altair.HibernateProjecto.Cancion"/>
		<mapping class="es.altair.HibernateProjecto.Genero"/>
		<mapping class="es.altair.HibernateProjecto.Lista"/>
		<mapping class="es.altair.HibernateProjecto.Usuario"/>
    </session-factory>
</hibernate-configuration>
